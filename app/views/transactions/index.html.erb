<h1>Listing transactions</h1>

<table>
  <tr>
    <th><%= sortable "Timestamp" %></th>
    <th><%= sortable "Name" %></th>
    <th><%= sortable "Amount" %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @transactions.each do |transaction| %>
  <tr>
    <td><%= transaction.timeStamp %></td>
    <td><%= transaction.name %></td>
    <td><%= convertAmount(transaction.amount, transaction.debitOrCredit) %></td>
  </tr>
<% end %>
</table>

