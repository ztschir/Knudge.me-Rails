<% unless credentials.nil? || credentials.empty? %>
  <% credentials.each do |name, attributes| %>
    <%= label_tag name, name %>
    <% unless %w{OPTION RADIO}.include?(attributes[0]["fieldType"][0]) %>
      <%= make_field name, attributes %>
    <% else %>
      <% attributes[0]["optionValues"].each do |display_name, value| %>
        <br/>
        <%= label_tag name, display_name %>
        <%= make_multi_field name, value, attributes[0]["fieldType"][0] %>
      <% end %>
    <% end %>
    <br />
  <% end %>
  <%= submit_tag "Save Credentials", :id => "saveCredentials" %>
<% end %>